<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	android:padding="5dp"
	android:clickable="true"
	android:id="@+id/recommended_item_container">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:id="@+id/recommended_item_section_header_container">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:text="Section Header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textSize="20sp"
				android:id="@+id/recommended_item_section_header"/>
			<Button
				android:text="@string/play_mix"
				android:layout_width="wrap_content"
				android:layout_height="35sp"
				android:layout_marginLeft="5dp"
				android:layout_marginBottom="10dp"
				android:background="@drawable/ic_standard_button"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/btn_play_mix" />
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="?android:attr/colorForeground"
			android:id="@+id/recommended_item_section_divider"/>
	</LinearLayout>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/recommended_item_content_container">
		<com.google.android.material.imageview.ShapeableImageView
			app:shapeAppearanceOverlay="@style/roundedCornersImageView"
			android:layout_width="150dp"
			android:layout_height="84dp"
			android:id="@+id/img_recommended_item_thumbnail" />
		<TextView
			android:text="MM:SS"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/textview_rounded_corners"
			android:textColor="@color/white"
			android:padding="3dp"
			android:layout_margin="5dp"
			app:layout_constraintBottom_toBottomOf="@id/img_recommended_item_thumbnail"
			app:layout_constraintRight_toRightOf="@id/img_recommended_item_thumbnail"
			android:id="@+id/txt_recommended_item_duration" />
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_playlist"
			android:layout_margin="5dp"
			app:layout_constraintLeft_toLeftOf="@id/img_recommended_item_thumbnail"
			app:layout_constraintTop_toTopOf="@id/img_recommended_item_thumbnail"
			android:id="@+id/img_recommended_item_playlist_icon"/>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:padding="5dp"
			android:weightSum="2"
			app:layout_constraintLeft_toRightOf="@id/img_recommended_item_thumbnail"
			app:layout_constraintRight_toLeftOf="@id/btn_recommended_item_popup"
			app:layout_constraintTop_toTopOf="@id/img_recommended_item_thumbnail"
			app:layout_constraintBottom_toBottomOf="@id/img_recommended_item_thumbnail"
			app:layout_constraintStart_toEndOf="@id/img_recommended_item_thumbnail"
			app:layout_constraintEnd_toStartOf="@id/btn_recommended_item_popup"
			android:id="@+id/home_item_info_container">
			<TextView
				android:text="Recommended Content Item"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_weight="1"
				android:gravity="bottom"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textSize="15sp"
				android:ellipsize="end"
				android:maxLines="2"
				android:maxLength="50"
				android:id="@+id/txt_recommended_item_title" />
			<TextView
				android:text="Description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_weight="1"
				android:ellipsize="end"
				android:maxLines="1"
				android:id="@+id/txt_recommended_item_description" />
		</LinearLayout>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			style="?android:attr/actionOverflowButtonStyle"
			app:layout_constraintRight_toRightOf="@id/recommended_item_content_container"
			app:layout_constraintTop_toTopOf="@id/recommended_item_content_container"
			app:layout_constraintBottom_toBottomOf="@id/recommended_item_content_container"
			android:id="@+id/btn_recommended_item_popup" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>