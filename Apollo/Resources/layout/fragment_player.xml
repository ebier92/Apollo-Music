<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/player_container">
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/play_layers_container">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/player_gradient_background"/>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/blue_slate"
			android:alpha="0.5"
			android:id="@+id/player_black_background"/>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="?android:attr/colorBackground"
			android:id="@+id/player_solid_background"/>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:elevation="10dp"
			android:clickable="true"
			android:id="@+id/player_content_container">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/mini_player_container">
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/player_album_art_container">
					<ImageView
						android:src="@android:drawable/ic_menu_gallery"
						android:layout_width="99dp"
						android:layout_height="68dp"
						android:id="@+id/img_player_album_art" />
					<ProgressBar
						style="?android:attr/progressBarStyleSmall"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_centerInParent="true"
						android:visibility="invisible"
						android:id="@+id/progress_bar_song_loading" />
				</RelativeLayout>
				<ProgressBar
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@id/player_album_art_container"
					android:layout_alignBottom="@id/player_album_art_container"
					android:id="@+id/progress_bar_mini_player" />
				<TextView
					android:text=""
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@id/player_album_art_container"
					android:layout_toLeftOf="@id/btn_mini_player_play_pause"
					android:layout_centerInParent="true"
					android:ellipsize="end"
					android:maxLines="2"
					android:maxLength="50"
					android:paddingBottom="8dp"
					android:id="@+id/txt_mini_player_song_title" />
				<Button
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_centerInParent="true"
					android:layout_alignParentRight="true"
					android:layout_marginRight="15dp"
					android:background="@drawable/ic_skip_next_control"
					android:id="@+id/btn_mini_player_skip_next" />
				<Button
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_centerInParent="true"
					android:layout_toLeftOf="@id/btn_mini_player_skip_next"
					android:layout_marginRight="8dp"
					android:background="@drawable/ic_play_control"
					android:id="@+id/btn_mini_player_play_pause" />
			</RelativeLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/song_controls_container">
				<TextView
					android:text=""
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAlignment="center"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:ellipsize="end"
					android:maxLines="2"
					android:maxLength="75"
					android:id="@+id/txt_song_title" />
				<TextView
					android:text=""
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAlignment="center"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:layout_marginBottom="40dp"
					android:ellipsize="end"
					android:maxLines="1"
					android:maxLength="75"
					android:id="@+id/txt_artist_name" />
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/time_container">
					<TextView
						android:text="0:00"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="30dp"
						android:id="@+id/txt_time_passed" />
					<TextView
						android:text="0:00"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:paddingRight="30dp"
						android:id="@+id/txt_time_remaining" />
				</RelativeLayout>
				<SeekBar
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="5dp"
					android:paddingLeft="40dp"
					android:paddingRight="40dp"
					android:thumb="@drawable/seek_bar_thumb"
					android:progressTint="@color/orange300"
					android:progressBackgroundTint="?android:attr/colorButtonNormal"
					android:id="@+id/seek_bar" />
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/song_controls_layout">
					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true">
						<Button
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_marginRight="7dp"
							android:layout_marginLeft="7dp"
							android:background="@drawable/ic_skip_previous_control"
							android:id="@+id/btn_skip_previous" />
						<Button
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_marginRight="7dp"
							android:layout_marginLeft="7dp"
							android:background="@drawable/ic_stop_control"
							android:id="@+id/btn_stop" />
						<Button
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_marginRight="7dp"
							android:layout_marginLeft="7dp"
							android:background="@drawable/ic_play_control"
							android:id="@+id/btn_play_pause" />
						<Button
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_marginRight="7dp"
							android:layout_marginLeft="7dp"
							android:background="@drawable/ic_skip_next_control"
							android:id="@+id/btn_skip_next" />
					</LinearLayout>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>